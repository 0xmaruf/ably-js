{
  "compilerOptions": {
    "target": "es3",
    "module": "commonjs",
    "lib": ["ES5", "DOM", "webworker"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "paths": {
        "platform": ["./src/platform/nodejs/platform", "./src/platform/web/fragments/platform-browser", "./src/platform/web/fragments/platform-reactnative"],
        "platform-defaults": ["./src/platform/nodejs/lib/util/defaults", "./src/platform/browser/lib/util/defaults"]
    }
  }
}
